<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1589FF" />

            <stroke android:width="1dp"
                android:color="#000000" />

            <corners android:radius="0dp" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#000000" />

            <solid android:color="#38ACEC" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners android:radius="0dp" />
        </shape>
    </item>


</selector>